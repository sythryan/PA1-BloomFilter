import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		int choice;
		int setSize;
		int bitsPerElement;
		Scanner in = new Scanner(System.in);
		
		System.out.println("Enter your Set Size");
		setSize = in.nextInt();
	
		System.out.println("Enter your Bits Per Element");
		bitsPerElement = in.nextInt();
  
		System.out.println("Select Bloom Filter Type");
		System.out.println("1 - Deterministic");
		System.out.println("2 - Random");
		choice = in.nextInt();
		
		if (choice == 1)
		{
			BloomFilterDet DeterministicFilter = new BloomFilterDet(setSize, bitsPerElement);	
			
			while (true) {		
				System.out.println("Please select a number from the list");
				System.out.println("1 - Add an Element");
				System.out.println("2 - Find an Element");
				System.out.println("3 - Number of Hash functions");
				System.out.println("4 - Filter Size");
				System.out.println("5 - Data Size");
				System.out.println("6 - Exit");
				choice = in.nextInt();
				in.nextLine(); // skip over the /n
				
				if (choice == 1) {
					System.out.println("Enter a string element to add");
					DeterministicFilter.add(in.nextLine());
				}
				else if (choice == 2) {
					System.out.println("Enter a string element to find");
					System.out.println(DeterministicFilter.appears(in.nextLine()));
				}
				else if (choice == 3) {
					System.out.println("Number of hash functions needed: " + DeterministicFilter.numHashes());
				}
				else if (choice == 4) {
					System.out.println("Filter Size: " + DeterministicFilter.filterSize());
				}
				else if (choice == 5) {
					System.out.println("Data Size: " + DeterministicFilter.dataSize());
				}
				else if (choice == 6) {
					break;
				}
				else
				{
					System.out.println("Invalid input");
				}
				
				System.out.println("");
				System.out.println("");
		  
			}
			in.close();
		}
		else if (choice == 2) {
			BloomFilterRan randomFilter = new BloomFilterDet(setSize, bitsPerElement);	
			
			while (true) {		
				System.out.println("Please select a number from the list");
				System.out.println("1 - Add an Element");
				System.out.println("2 - Find an Element");
				System.out.println("3 - Number of Hash functions");
				System.out.println("4 - Filter Size");
				System.out.println("5 - Data Size");
				System.out.println("6 - Exit");
				choice = in.nextInt();
				in.nextLine(); // skip over the /n
				
				if (choice == 1) {
					System.out.println("Enter a string element to add");
					DeterministicFilter.add(in.nextLine());
				}
				else if (choice == 2) {
					System.out.println("Enter a string element to find");
					System.out.println(DeterministicFilter.appears(in.nextLine()));
				}
				else if (choice == 3) {
					System.out.println("Number of hash functions needed: " + DeterministicFilter.numHashes());
				}
				else if (choice == 4) {
					System.out.println("Filter Size: " + DeterministicFilter.filterSize());
				}
				else if (choice == 5) {
					System.out.println("Data Size: " + DeterministicFilter.dataSize());
				}
				else if (choice == 6) {
					break;
				}
				else
				{
					System.out.println("Invalid input");
				}
				
				System.out.println("");
				System.out.println("");
		  
			}
			in.close();
		}
   }
}